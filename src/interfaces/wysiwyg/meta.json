{
  "name": "$t:wysiwyg",
  "version": "1.1.0",
  "types": [
    "string"
  ],
  "icon": "format_quote",
  "recommended": {
    "length": 65534
  },
  "options": {
    "placeholder": {
      "name": "$t:placeholder",
      "comment": "$t:placeholder_comment",
      "interface": "text-input",
      "length": 200
    },
    "upload_files": {
      "name": "$t:upload_files",
      "comment": "$t:upload_files_comment",
      "interface": "toggle",
      "type": "BOOLEAN",
      "default": true
    },
    "custom_url": {
      "name": "$t:custom_url",
      "comment": "$t:custom_url_comment",
      "interface": "text-input",
      "default": null,
      "length": 250
    },
    "toolbarOptions": {
      "name": "$t:toolbar_options",
      "comment": "$t:toolbar_options_comment",
      "interface": "json",
      "options": {
        "language": "application/json",
        "template": [
          "Paragraph",
          "Bold",
          "Strike",
          "Underline",
          "Italic",
          "ListItem",
          "Blockquote",
          "BulletList",
          "Link",
          "Image",
          "History"
        ]
      }
    },
    "codeMirrorOptions": {
      "name": "$t:toolbar_cm_options",
      "comment": "$t:toolbar_cm_options_comment",
      "interface": "code",
      "options": {
        "language": "application/json",
        "template": {
          "tabSize": 2,
          "autoRefresh": true,
          "indentUnit": 2,
          "styleActiveLine": true,
          "readOnly": false,
          "styleSelectedText": true,
          "lineNumbers": true,
          "lineWrapping": true,
          "mode": "text/html",
          "matchBrackets": true,
          "showCursorWhenSelecting": true,
          "theme": "default",
          "extraKeys": {
            "Ctrl": "autocomplete"
          }
        }
      }
    }
  },
  "translation": {
    "en-US": {
      "wysiwyg": "WYSIWYG",
      "go_back": "Exit code inspection",
      "dark_mode": "Toggle dark mode",
      "toolbar_options": "Editor toolbar options",
      "toolbar_options_comment": "Enable and sort extensions in the toolbar of ***ADD LINK TO README IN EXTENSION***",
      "toolbar_cm_options": "Code Mirror Options",
      "toolbar_cm_options_comment": "Code Mirror Options for the formatted raw view of this editor",
      "upload_files_comment": "Upload files to directus instead of using Base64 encoded images. Needs 'image' in toolbar.",
      "custom_url": "URL base for images",
      "custom_url_comment": "Optional custom URL base for images including last '/'",
      "placeholder": "Placeholder",
      "placeholder_comment": "Enter placeholder text",
      "buttons": "Buttons",
      "buttons_comment": "Choose what buttons to use in the toolbar",
      "distraction_free_mode": "Distracton free mode",
      "distraction_free_mode_exit": "Close full screen"
    },
    "fr-FR": {
      "wysiwyg": "Editeur simplifié de contenu avec présentation « tel écran, tel écrit »",
      "go_back": "exit inspection",
      "dark_mode": "Toggle dark mode",
      "exit_full": "Exit full screen",
      "toolbar_options": "Editor toolbar options",
      "toolbar_options_comment": "Enable and sort extensions in the toolbar of ***ADD LINK TO README IN EXTENSION***",
      "toolbar_cm_options": "Code Mirror Options",
      "toolbar_cm_options_comment": "Code Mirror Options for the formatted raw view of this editor",
      "upload_files_comment": "Upload files to directus instead of using Base64 encoded images. Needs 'image' in toolbar.",
      "custom_url": "URL base for images",
      "custom_url_comment": "Optional custom URL base for images including last '/'",
      "placeholder": "Paramètre fictif",
      "placeholder_comment": "Texte statique qui est affiché avant la sélection d'une valeur",
      "buttons": "Boutons",
      "buttons_comment": "Choix des boutons utilisables à travers la barre d'outils",
      "distraction_free_mode": "Mode « non distractif »"
    }
  }
}
