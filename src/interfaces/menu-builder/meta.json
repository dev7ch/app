{
  "name": "$t:json_menu_builder",
  "version": "1.0.0",
  "icon": "menu",
  "types": ["json"],
  "options": {
    "codeMirrorOptions": {
      "name": "$t:cm_options",
      "comment": "$t:cm_options_comment",
      "interface": "code",
      "options": {
        "language": "application/json",
        "default": {
          "tabSize": 2,
          "autoRefresh": true,
          "indentUnit": 2,
          "styleActiveLine": true,
          "readOnly": false,
          "styleSelectedText": true,
          "line": true,
          "hintOptions": {
            "completeSingle": false
          },
          "lineNumbers": true,
          "lineWrapping": true,
          "mode": "application/json",
          "matchBrackets": true,
          "showCursorWhenSelecting": true,
          "theme": "default",
          "extraKeys": {
            "Ctrl": "autocomplete"
          }
        }
      }
    }
  },
  "translation": {
    "en-US": {
      "json_menu_builder": "JSON Menu Builder",
      "cm_options": "CodeMirror Settings",
      "cm_options_comment": "Define the interface appearance of the editor.",
      "template_comment": "Provide a template the user can use to get started with",
      "lineNumber": "Line Number",
      "lineNumber_comment": "Show line numbers",
      "loc": "No lines of {lang} | One line of {lang} | {count} lines of {lang}"
    }
  },
  "author": "Silvan Hahn <silvan@dev7.ch>"
}
